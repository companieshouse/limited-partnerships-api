                "properties": {
                  "id": {
                    "type": "string"
                  }
                }
              }
            },
            "limited_partners": {
              "type": "array",
              "items": {
                "properties": {
                  "id": {
                    "type": "string"
                  }
                }
              }
            },
            "partnership": {
              "type": "array",
              "items": {
                "properties": {
                  "id": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
